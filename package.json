{
  "name": "bob-lambert",
  "productName": "His Voice",
  "version": "1.0.0",
  "description": "The app is meant for reading sermons",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "npx electronmon .",
    "dev": "npx electronmon .",
    "dist": "electron-builder"
  },
  "license": "MIT",
  "dependencies": {
    "electron": "^31.2.1",
    "electronmon": "^2.0.3"
  },
  "author": "Entime Message (Divine Love Chapel)",
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "His Voice",
    "files": [
      "hisVoice/",
      "app/build/",
      "node_modules/",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "app/build/cloud.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "images/Bob.ico",
      "uninstallerIcon": "images/Bob.ico"
    }
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  }
}
